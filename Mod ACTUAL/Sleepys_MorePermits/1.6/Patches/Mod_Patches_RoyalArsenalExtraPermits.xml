<?xml version="1.0" encoding="UTF-8"?>

<Patch>
	<!-- Cleans up overlaps with this mod -->
	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>Royal Arsenal: Extra Permits</li>
		</mods>
		
		<match Class="PatchOperationSequence">
			<operations>
				<li Class="PatchOperationReplace">
					<xpath>/Defs/RoyalTitlePermitDef[defName="RA_AntigrainSellDrop"]/uiPosition</xpath>
					<value>
						<uiPosition>(2,2)</uiPosition>
					</value>
				</li>
							
				<li Class="PatchOperationReplace">
					<xpath>/Defs/RoyalTitlePermitDef[defName="RA_AdvancedComponentDrop"]/uiPosition</xpath>
					<value>
						<uiPosition>(2,3)</uiPosition>
					</value>
				</li>
			</operations>
		</match>
	</Operation>
</Patch>