<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <!--===================== Imperial Medics =========================-->
	<PawnKindDef Name="EmpireMedicBase" Abstract="True">
    <specificApparelRequirements>
      <li>
        <colorGenerator Class="ColorGenerator_Options">
          <options>
            <li>
              <only>(130, 130, 130)</only>
            </li>
			<li>
              <only>(136, 8, 8)</only>
            </li>
			<li>
              <only>(130, 130, 130)</only>
            </li>
          </options>
        </colorGenerator>
      </li>
      <li>
        <bodyPartGroup>UpperHead</bodyPartGroup>
        <stuff>Cloth</stuff>
      </li>
      <li>
        <bodyPartGroup>Torso</bodyPartGroup>
        <stuff>Cloth</stuff>
      </li>
      <li>
        <bodyPartGroup>Legs</bodyPartGroup>
        <stuff>Cloth</stuff>
      </li>
    </specificApparelRequirements>
  </PawnKindDef>
	
	<!-- Civilian Paramedic -->
	<PawnKindDef ParentName="EmpireMedicBase">
    <defName>Empire_Common_Medic</defName>
    <label>imperial medic</label>
    <race>Human</race>
    <defaultFactionType>Empire</defaultFactionType>
    <minTitleRequired>Freeholder</minTitleRequired>
    <maxGenerationAge>65</maxGenerationAge>
    <combatPower>30</combatPower>
    <backstoryFiltersOverride>
      <li>
        <categories>
          <li>ImperialCommon</li>
          <li>ImperialFighter</li>
        </categories>
      </li>
    </backstoryFiltersOverride>
    <baseRecruitDifficulty>0.30</baseRecruitDifficulty>
    <backstoryCryptosleepCommonality>0.08</backstoryCryptosleepCommonality>
    <forceNormalGearQuality>true</forceNormalGearQuality>
    <isFighter>false</isFighter>
    <apparelTags>
      <li>IndustrialBasic</li>
	  <li>IndustrialAdvanced</li>
	  <li>IndustrialMilitaryBasic</li>
    </apparelTags>
    <apparelMoney>1000~3000</apparelMoney>
    <gearHealthRange>1~1</gearHealthRange>
    <apparelAllowHeadgearChance>0.5</apparelAllowHeadgearChance>
    <techHediffsMoney>50~800</techHediffsMoney>
    <techHediffsTags>
      <li>Poor</li>
      <li>Simple</li>
    </techHediffsTags>
    <techHediffsChance>0.08</techHediffsChance>
    <apparelDisallowTags>
      <li>Western</li>
    </apparelDisallowTags>
    <disallowedTraits>
      <li>Nudist</li>
    </disallowedTraits>
    <initialWillRange>1~3</initialWillRange>
    <initialResistanceRange>10~17</initialResistanceRange>
	
	<!-- Start with medicine -->
	<inventoryOptions>
     <skipChance>0.01</skipChance>
     <subOptionsTakeAll>
       <li>
         <thingDef>MedicineIndustrial</thingDef>
         <countRange>4~9</countRange>
       </li>
     </subOptionsTakeAll>
   </inventoryOptions>
   
   <!-- Force gear colour -->
   <!-- <apparelColor>(130,130,130)</apparelColor> -->
	
	<!-- Force Skill -->
	<skills>
      <li>
        <skill>Medicine</skill>
        <range>8~12</range>
      </li>
    </skills>
	
	<!-- Set allowed work types -->
	<requiredWorkTags>
	  <li>Caring</li>
    </requiredWorkTags>
  </PawnKindDef>
  
